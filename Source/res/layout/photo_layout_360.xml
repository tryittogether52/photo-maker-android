<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/menu"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/import_photo"
            android:layout_width="match_parent"
            android:layout_height="50.625dp"
            android:background="@drawable/menu_button" >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="27.0dp"
                android:layout_height="27.0dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.75sp"
                android:background="@drawable/content_picture"
                android:contentDescription="@string/content_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11.25dp"
                android:layout_marginRight="22.5dp"
                android:layout_toRightOf="@+id/img1"
                android:text="@string/import_photo"
                android:textColor="@color/white_background"
                android:textSize="15.75sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.125dp"
            android:background="@drawable/line_menu" />

        <RelativeLayout
            android:id="@+id/import_text"
            android:layout_width="match_parent"
            android:layout_height="50.625dp"
            android:background="@drawable/menu_button" >

            <ImageView
                android:id="@+id/img2"
                android:layout_width="27.0dp"
                android:layout_height="27.0dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.75sp"
                android:background="@drawable/content_edit"
                android:contentDescription="@string/content_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11.25dp"
                android:layout_marginRight="22.5dp"
                android:layout_toRightOf="@+id/img2"
                android:text="@string/import_text"
                android:textColor="@color/white_background"
                android:textSize="15.75sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.125dp"
            android:background="@drawable/line_menu" />

        <RelativeLayout
            android:id="@+id/change_background"
            android:layout_width="match_parent"
            android:layout_height="50.625dp"
            android:background="@drawable/menu_button" >

            <ImageView
                android:id="@+id/img3"
                android:layout_width="27.0dp"
                android:layout_height="27.0dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.75sp"
                android:background="@drawable/content_copy"
                android:contentDescription="@string/content_image" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11.25dp"
                android:layout_marginRight="22.5dp"
                android:layout_toRightOf="@+id/img3"
                android:text="@string/change_background"
                android:textColor="@color/white_background"
                android:textSize="15.75sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.125dp"
            android:background="@drawable/line_menu" />
    </LinearLayout>

    <vn.android.photomaker.multitouch.PhotoSortrView
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />

</FrameLayout>